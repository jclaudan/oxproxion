<?xml version="1.0" encoding="utf-8"?>
<!-- button_background_col.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Disabled state -->
<item android:state_enabled="false"  android:color="#000000"/> <!-- Grayed out when disabled -->

<!-- Pressed state (only when enabled) -->
<item android:state_pressed="true" android:state_enabled="true" android:color="@color/pressed_color"/>

<!-- Focused state (only when enabled) -->
<item android:state_focused="true" android:state_enabled="true" android:color="@color/focused_color"/>

<!-- Selected state (only when enabled) -->
<item android:state_selected="true" android:state_enabled="true" android:color="#6D2E0F" />

<!-- Default state (enabled but none of the above) -->
<item android:state_enabled="true" android:color="#000000"/>

<!-- Fallback default (shouldn't normally be needed) -->
<item android:color="#171717"/>
</selector>
    <!-- 4D = 30 % alpha 10 % → #1A
20 % → #33
40 % → #66
50 % → #80
60 % → #99
70 % → #B3
80 % → #CC  -->
