<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp">

    <!-- Inner group for icon + message, pinned to left with max 80% width -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/aiGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintHorizontal_bias="0.0">

        <!-- Icon/button on top -->
        <ImageButton
            android:id="@+id/copyButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Copy text"
            android:padding="4dp"
            android:src="@drawable/ic_tune"
            app:tint="#2C2C2C"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:id="@+id/shareButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Share text"
            android:padding="4dp"
            android:src="@drawable/ic_share"
            app:tint="#2C2C2C"
            app:layout_constraintStart_toEndOf="@id/copyButton"
            app:layout_constraintTop_toTopOf="@id/copyButton"
            app:layout_constraintBottom_toBottomOf="@id/copyButton" />


        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|top"
            android:background="@drawable/bg_ai_message"
            android:fontFamily="@font/geologica_light"
            android:padding="12dp"
            android:textColorHighlight="#756151"
            android:text="AI message here"
            android:textColor="#F8F8F8"
            android:linksClickable="true"
            android:textColorLink="@android:color/holo_blue_dark"
            android:textIsSelectable="true"
            android:textSize="16sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/copyButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
