<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/rounded_dialog_bg">

    <TextView
        android:id="@+id/dialog_titlemaxtokens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Max Tokens"
        android:textColor="#C2C2C2"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Max Tokens"
        app:boxStrokeColor="#C2C2C2"
        app:hintTextColor="#C2C2C2"
        android:id="@+id/edit_text_lay_maxtokens"
        app:boxBackgroundMode="outline">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_maxtokens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="number"
            android:digits="0123456789"
            android:fontFamily="@font/geologica_light"
            android:textColor="#ffffff"
            android:text="12000"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Max tokens limit the length of the AI's response. A higher number allows longer replies but may increase costs. Default is 12000."
        android:textColor="#C2C2C2"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cancelmaxtokens"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#C2C2C2"
            android:text="Cancel" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_savemaxtokens"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#C2C2C2"
            android:layout_marginStart="8dp"
            android:text="Save" />
    </LinearLayout>
</LinearLayout>
